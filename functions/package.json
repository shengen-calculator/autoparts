{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions:processSignUp,functions:getClientByVip,functions:getPaymentsByVip",
    "deploy:order": "firebase deploy --only functions:getOrdersByVip,functions:getReservesByVip,functions:deleteOrdersByIds,functions:deleteReservesByIds,functions:updateReservePrices,functions:updateOrderQuantity,functions:updateReserveQuantity",
    "deploy:search": "firebase deploy --only functions:getInfoByVendor,functions:searchByNumber,functions:searchByBrandAndNumber,functions:checkIfPresentInOrderList,functions:createOrder,functions:createReserve,functions:getByAnalog,functions:updatePrice",
    "deploy:statistic": "firebase deploy --only functions:getQueryStatistic,functions:getVendorStatistic,functions:getStatisticByVendor,functions:getClientStatistic,functions:getStatisticByClient",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^3.1.0"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-plugin-promise": "^4.0.1",
    "firebase-functions-test": "^0.1.6"
  },
  "private": true
}
